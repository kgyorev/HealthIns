@model HealthIns.Web.ViewModels.Distributor.DistributorSearchViewModel
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container col-sm-4  mt-3">
        <form method="GET" action="/Distributor/Search">

            <div class="form-group">
                <label asp-for="SearchBy">Search By:</label>
                <select  asp-for="SearchBy" class="form-control" id="searchBy" name="searchBy">
                    <option value="distributorId">Distributor ID</option>
                    <option value="organizationId">Organization ID</option>
                    <option value="userId">User Name</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ReferenceId">Identifier</label>
                <input type="text" class="form-control" id="referenceId" value="@Model.ReferenceId" name="referenceId" placeholder="Search by Reference Identifier...">
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button class="btn btn-outline-primary" type="submit"><svg class="svg-inline--fa fa-search fa-w-16" aria-hidden="true" data-prefix="fas" data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path></svg><!-- <i class="fas fa-search"></i> --> Search</button>
                    <a class="btn btn-outline-secondary" href="/Distributor/Search" type="submit"><svg class="svg-inline--fa fa-eraser fa-w-16" aria-hidden="true" data-prefix="fas" data-icon="eraser" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M497.941 273.941c18.745-18.745 18.745-49.137 0-67.882l-160-160c-18.745-18.745-49.136-18.746-67.883 0l-256 256c-18.745 18.745-18.745 49.137 0 67.882l96 96A48.004 48.004 0 0 0 144 480h356c6.627 0 12-5.373 12-12v-40c0-6.627-5.373-12-12-12H355.883l142.058-142.059zm-302.627-62.627l137.373 137.373L265.373 416H150.628l-80-80 124.686-124.686z"></path></svg><!-- <i class="fas fa-eraser"></i> --> Reset </a>
                </div>
            </div>
        </form>
    </div>
<div class="table-responsive-sm">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Full Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.DistributorsFound.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <th>@Model.DistributorsFound[i].Id</th>
                    <td>@Model.DistributorsFound[i].FullName</td>
                    <td>
                        <a href="/Distributor/Details/@Model.DistributorsFound[i].Id">
                            <i class="fas fa-binoculars"
                               title="Distributor details"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/Distributor/Edit/@Model.DistributorsFound[i].Id">
                            <i class="fas fa-edit"
                               title="Edit distributor"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

