@model HealthIns.Web.InputModels.Financial.ClaimActivityCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <form class="my-4" method="post" enctype="multipart/form-data">
        <h2 class="text-center">Create Claim</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClaimDate">Claim Date</label>
            <input type="date" class="form-control" id="claimDate" name="claimDate" input asp-for="ClaimDate">
            <span asp-validation-for="ClaimDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClaimEventType">Claim Event Type</label>
            <input type="text" class="form-control" id="claimEventType" name="claimEventType" input asp-for="ClaimEventType" value="Death" readonly>
            <span asp-validation-for="ClaimEventType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OperationAmount">Claim Beneficiary Amount(in EUR)</label>
            <input type="number" class="form-control" id="operationAmount" name="operationAmount" input asp-for="OperationAmount" readonly>
            <span asp-validation-for="OperationAmount" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="button" data-toggle="modal" class="btn btn-primary" data-target="#save">
                Save <i class="fas fa-chevron-circle-right"></i>
            </button>
        </div>
        <div class="modal fade" id="save" tabindex="-1" role="dialog"
             aria-labelledby="deleteUserLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteUserLabel">This action can't be undone</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure to save this claim?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button name="action" value="save" class="btn btn-primary" type="submit">
                            Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>




