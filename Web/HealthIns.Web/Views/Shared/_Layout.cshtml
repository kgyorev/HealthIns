<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*  <meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <title>@ViewData["Title"] - HealthIns</title>
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://bootswatch.com/4/spacelab/bootstrap.min.css">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"
            integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ"
            crossorigin="anonymous"></script>


    @* <link rel="stylesheet" href="~/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/jquery.datetimepicker.css" />
    @*<link rel="stylesheet" href="~/css/site1.css" />
        <script src="~/js/jquery-3.4.1.min.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>*@
    <script src="~/js/jquery.datetimepicker.full.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
        {
           <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">HealthIns</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contract/Create">New Business</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contract/Search">Contract Area</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkDistributors" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Distributors
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="/Distributor/Create">
                                    New
                                    Distributor
                                </a>
                                <a class="dropdown-item" href="/Distributor/Search">Distributor Area</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkProducts" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Product Workbench
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="/Administration/Product/Create">
                                    New
                                    Product
                                </a>
                                <a class="dropdown-item" href="/Administration/Product/Search">Product Area</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkCustomers" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Perosn/Organization
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="/Person/Create">
                                    New
                                    Person
                                </a>
                                <a class="dropdown-item" href="/Person/Search">Person Area</a>
                                <a class="dropdown-item" href="/Organization/Create">
                                    New
                                    Organization
                                </a>
                                <a class="dropdown-item" href="/Organization/Search">
                                    Organization
                                    Area
                                </a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        }
        else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("User"))
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">HealthIns</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contract/Create">New Business</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contract/Search">Contract Area</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkDistributors" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Distributors
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="/Distributor/Create">
                                    New
                                    Distributor
                                </a>
                                <a class="dropdown-item" href="/Distributor/Search">Distributor Area</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkCustomers" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Perosn/Organization
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="/Person/Create">
                                    New
                                    Person
                                </a>
                                <a class="dropdown-item" href="/Person/Search">Person Area</a>
                                <a class="dropdown-item" href="/Organization/Create">
                                    New
                                    Organization
                                </a>
                                <a class="dropdown-item" href="/Organization/Search">
                                    Organization
                                    Area
                                </a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        }
        else
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">HealthIns</a>
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNavDropdown" style="">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Register">Register</a>
                        </li>
                    </ul>
                </div>
            </nav>
       }
        <main class="container-fluid mt-3 mb-3">
            <div id="messages">
                <partial name="~/Views/Shared/_ErrorMessagePartial.cshtml" />
                <partial name="~/Views/Shared/_InfoMessagePartial.cshtml" />
            </div>
            @RenderBody()
        </main>
        <footer>
            <div class="bg-primary rounded">
                <div class="text-white p-3 text-center font-weight-bold">
                    &copy; Health Insurance System, 2019. All rights reserved.
                </div>
            </div>
        </footer>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
